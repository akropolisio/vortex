{
  "name": "basis",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "ethlint": "^1.2.5",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.57",
    "pretty-quick": "^3.0.2"
  },
  "scripts": {
    "lint": "pretty-quick --pattern '**/*.*(sol|json)' --verbose",
    "lint:check": "prettier --check **/*.sol **/*.json",
    "lint:fix": "pretty-quick --pattern '**/*.*(sol|json)' --staged --verbose",
    "sec:flatten": "sh ./security/flattener-run.sh",
    "format:test:lint": "black --check tests",
    "format:test:fix": "black . tests",
    "clone-packages": "sh ./security/clone-packages.sh"
  },
  "dependencies": {
    "hardhat": "./hardhat/packages/hardhat-core/hardhat-v2.6.2.tgz"
  }
}
